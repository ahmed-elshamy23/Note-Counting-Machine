#include <LiquidCrystal.h>
#include <Keypad.h>
const int rs = 12, en = 11, d4 = 5, d5 = 4, d6 = 3, d7 = 2;
LiquidCrystal lcd(A0, A1, A2, A3, A4, A5);
const byte ROWS = 4; 
const byte COLS = 4; 
char keys[ROWS][COLS] = {
  {'1','2','3','A'},
  {'4','5','6','B'},
  {'7','8','9','C'},
  {'*','0','#','D'}
};
byte rowPins[ROWS] = {2, 3, 4, 5}; 
byte colPins[COLS] = {6, 7, 8, 9}; 
Keypad keypad = Keypad( makeKeymap(keys), rowPins, colPins, ROWS, COLS );
int i=0,m=1,j=0;
char b[6]={'1','2','3','4','5','6'};
void setup() {
  lcd.begin(16, 2);
  lcd.print("Enter pass & #");
  Serial.begin(9600);
}

void loop() {
  lcd.setCursor(i, 1);
  char key = keypad.getKey();
  if (key){
      if(key=='#'){
      lcd.setCursor(0, 1);
      if(m==0){lcd.clear();
              lcd.print("wrong pass       ");
              j=0;
              delay(2000);
              lcd.begin(16, 2);
              lcd.print("try again");
               i=0;} 
      else {
           lcd.clear();
           lcd.print("True           ");
           j=1;
           delay(2000);
           lcd.begin(16, 2);
           lcd.print("welcome <3");
           delay(2000);
           i=0;}
     
    }
    else{
    lcd.print("*");
    /*Serial.println(j);
     Serial.print(b[i]);
     Serial.print(key);*/
    
    if(key != b[i]){m=0;}
    else{m=1;}
    if(i==16){i=0;}
      ++i;}
} 
}
